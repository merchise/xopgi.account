<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <!-- XXX: For OpenERP only.  In Odoo xopgi_account_view_move_line_tree
         would be enough. -->
    <record id="view_move_line_tree_reconcile_curr" model="ir.ui.view">
      <field name="name">xopgi.view_move_line_tree_reconcile_curr</field>
      <field name="model">account.move.line</field>
      <field name="inherit_id" ref="account.view_move_line_tree_reconcile" />
      <field name="arch" type="xml">
	<field name='debit' position="attributes">
	  <attribute name="string">Debit (base currency)</attribute>
	</field>
	<field name='credit' position="attributes">
	  <attribute name="string">Credit (base currency)</attribute>
	</field>
	<field name="debit" position="before">
	  <field groups="base.group_multi_currency"
		 name="currency_debit"
		 string="Debit (line currency)"
		 sum="" />
	  <field groups="base.group_multi_currency"
		 name="currency_credit"
		 string="Credit (line currency)"
		 sum="" />
	  <field groups="base.group_multi_currency"
		 name="currency_id" options="{'no_open': True}"/>
	</field>
      </field>
    </record>
  </data>
</openerp>
