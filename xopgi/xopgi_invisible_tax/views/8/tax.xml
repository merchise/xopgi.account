<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <record id="hide_tax_journal_entry" model="ir.ui.view">
      <field name="name">xopgi_hide_tax_journal_entry</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='line_id']/tree/field[@name='tax_code_id']"
               position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>

        <xpath expr="//field[@name='line_id']/tree/field[@name='tax_amount']"
               position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>
      </field>
    </record>

    <record id="xopgi_account_view_move_line_tree" model="ir.ui.view">
      <field name="name">xopgi.view.move.line.tree</field>
      <field name="model">account.move.line</field>
      <field name="inherit_id" ref="account.view_move_line_tree" />
      <field name="arch" type="xml">
        <field name="account_tax_id" position="attributes">
          <attribute name="invisible">True</attribute>
        </field>
      </field>
    </record>
  </data>
</openerp>
