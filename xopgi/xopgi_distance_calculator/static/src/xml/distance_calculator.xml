<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
<t t-name="distance_calculator.ViewDistanceCalculator">
  <div class="modal fade myModalDistanceCalculator" data-backdrop="false" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">X</span></button>
          <h4 class="modal-title myModalLabel">
            <strong>Distance Calculator</strong>
          </h4>
        </div>
        <div class="modal-body">
          <table>
            <thead>
              <tr>
                <th width="15%">Country</th>
                <th width="87%"></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><select class="form-control not_chosen country"></select></td>
                <td></td>
              </tr>
            </tbody>
          </table>
          <br/>
          <table class="tblRoutes">
            <thead>
              <tr>
                <th width="15%">Origin</th>
                <th width="1%"></th>
                <th width="23%"></th>
                <th width="2%"></th>
                <th width="15%">Destination</th>
                <th width="1%"></th>
                <th width="23%"></th>
                <th width="2%"></th>
                <th width="13%">Distance</th>
                <th width="2%"></th>
                <th width="5%"></th>
              </tr>
            </thead>
            <tbody class="tbodyRoutes">
              <tr>
                <td><select class="form-control not_chosen state origin"></select></td>
                <td></td>
                <td><select class="form-control not_chosen route_point origin"></select></td>
                <td></td>
                <td><select class="form-control not_chosen state destination"></select></td>
                <td></td>
                <td><select class="form-control not_chosen route_point destination"></select></td>
                <td></td>
                <td><input type="number" class="form-control distance" placeholder="0.00" readonly="true"/></td>
                <td></td>
                <td>
                  <img class="img-delete_route" src="/xopgi_distance_calculator/static/src/img/delete_route.png"/>
                </td>
              </tr>
            </tbody>
          </table>
          <br/>
          <table>
            <thead>
              <tr>
                <th width="82%">
                  <div class="btn-add_route">
                    <h5>
                      <img class="img-add_route" src="/xopgi_distance_calculator/static/src/img/add_route.png"/>
                      Add Route
                    </h5>
                  </div>
                </th>
                <th width="13%">Total Distance<input type="number" class="form-control total_distance" placeholder="0.00" value="0.00" readonly="true"/></th>
                <th width="7%"></th>
              </tr>
            </thead>
          </table>
        </div>
        <div class="modal-footer">
            <button type="button"
                    class="btn btn-primary pull-right accept_distance"
                    data-dismiss="modal">Accept</button>
            <button type="button" class="btn btn-default pull-right"
                    data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</t>
<t t-name="distance_calculator.DistanceCalculatorTopButton">
  <li t-att-title='_t("Display Distance Calculator")'>
    <a href="#">
       <i id="oe_topbar_distance_calculator_button_icon" class="fa fa-car"/>
    </a>
    <span class="oe_distance_calculator_view"></span>
  </li>
</t>
<t t-name="FieldDistanceCalculator">
  <span t-att-class="'oe_form_field '+widget.widget_class" t-att-style="widget.node.attrs.style">
    <t t-if="!widget.get('effective_readonly')">
      <input t-att-type="widget.password ? 'password' : 'text'"
             t-att-id="widget.id_for_label"
             t-att-tabindex="widget.node.attrs.tabindex"
             t-att-autofocus="widget.node.attrs.autofocus"
             t-att-placeholder="widget.node.attrs.placeholder"
             t-att-maxlength="widget.field.size"/>
      <img class="oe_input_icon open_distance_calculator"
           t-att-src='_s + "/web/static/src/img/icons/gtk-edit.png"'
           width="16" height="16" border="0"/>
      <div class="oe_distance_calculator_view"></div>
    </t>
    <t t-if="widget.get('effective_readonly')">
        <span class="oe_form_char_content"></span>
    </t>
  </span>
</t>
</templates>
