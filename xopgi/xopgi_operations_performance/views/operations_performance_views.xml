<openerp>
  <data>
    <record id="operations_performance_reports_view_form"
            model="ir.ui.view">
      <field name="name">
        xopgi_operations_performance.operations_performance_report.form
      </field>
      <field name="model">xopgi_operations_performance.opperf_report</field>
      <field name="arch" type="xml">
        <form string="Operation Statistic">
          <sheet>
            <group>
              <field name="lead_id"/>
              <field name="response_time"/>
              <field name="proposal_time"/>
              <field name="negotiation_time"/>
              <field name="customer_confirm_time"/>
              <field name="invoice_time"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <record id="operations_performance_reports_view_graph"
            model="ir.ui.view">
      <field name="name">
        xopgi_operations_performance.operations_performance_report.graph
      </field>
      <field name="model">xopgi_operations_performance.opperf_report</field>
      <field name="arch" type="xml">
        <graph string="Operations Performance Statistics" type="pivot">
          <field name="lead_id" type="row"/>
          <field name="response_time" type="measure"/>
          <field name="proposal_time" type="measure"/>
          <field name="negotiation_time" type="measure"/>
          <field name="customer_confirm_time" type="measure"/>
          <field name="invoice_time" type="measure"/>
        </graph>
      </field>
    </record>
    <record id="operations_performance_reports_view_search" model="ir.ui.view">
      <field name="name">xopgi_operations_performance.operations_performance_report.search</field>
      <field name="model">xopgi_operations_performance.opperf_report</field>
      <field name="arch" type="xml">
        <search>
          <field name="partner_id"/>
          <field name="manager_id"/>
          <field name="user_id"/>
          <group string="Group By">
            <filter name="by_customer" string="Customer"
                    context="{'group_by': 'partner_id'}"/>
            <filter name="by_manager" string="Account Manager"
                    context="{'group_by': 'manager_id'}"/>
            <filter name="by_salesperson" string="Salesperson"
                    context="{'group_by': 'user_id'}"/>
          </group>
        </search>
      </field>
    </record>
    <record id="operations_performance_reports_view_tree" model="ir.ui.view">
      <field name="name">xopgi_operations_performance.operations_performance_report.tree</field>
      <field name="model">xopgi_operations_performance.opperf_report</field>
      <field name="arch" type="xml">
        <tree create="false" edit="false"
              default_order='id desc'
              string="Operations Performance">
          <field name="lead_id"/>
          <field name="response_time"/>
          <field name="proposal_time"/>
          <field name="negotiation_time"/>
          <field name="customer_confirm_time"/>
          <field name="invoice_time"/>
        </tree>
      </field>
    </record>

    <record id="operations_result_reports_view_graph"
            model="ir.ui.view">
      <field name="name">
        xopgi_operations_performance.operations_results_report.graph
      </field>
      <field name="model">xopgi_operations_performance.opresult_report</field>
      <field name="arch" type="xml">
        <graph string="Operations Results" type="pivot">
          <field name="analytic_id" type="row"/>
          <field name="debit" type="measure"/>
          <field name="credit" type="measure"/>
          <field name="balance" type="measure"/>
          <field name="margin_percentage" type="measure"/>
          <field name="pax" type="measure"/>
          <field name="margin_by_pax" type="measure"/>
        </graph>
      </field>
    </record>
    <record id="result_performance_reports_view_search" model="ir.ui.view">
      <field name="name">xopgi_operations_performance.result_performance_report.search</field>
      <field name="model">xopgi_operations_performance.opresult_report</field>
      <field name="arch" type="xml">
        <search>
          <field name="partner_id"/>
          <field name="manager_id"/>
          <field name="primary_salesperson_id"/>
          <field name="state"/>
          <filter name="closed_dossier" string="Closed Dossier"
                  domain="[('state', '=', 'close')]"/>
          <group string="Group By">
            <filter name="by_customer" string="Customer"
                    context="{'group_by': 'partner_id'}"/>
            <filter name="by_manager" string="Account Manager"
                    context="{'group_by': 'manager_id'}"/>
            <filter name="by_salesperson" string="Salesperson"
                    context="{'group_by': 'primary_salesperson_id'}"/>
            <filter name="by_expiration_date" string="Expiration Date"
                    context="{'group_by': 'date'}"/>
            <filter name="by_parent_operation" string="Parent Operation"
                    context="{'group_by': 'parent_analityc_id'}"/>
          </group>
        </search>
      </field>
    </record>
    <record id="operations_result_reports_view_tree" model="ir.ui.view">
      <field name="name">xopgi_operations_performance.operations_results_report.graph.tree</field>
      <field name="model">xopgi_operations_performance.opresult_report</field>
      <field name="arch" type="xml">
        <tree create="false" edit="false"
              default_order='id desc'
              string="Operations Performance">
          <field name="analytic_id"/>
          <field name="code"/>
          <field name="debit"/>
          <field name="credit"/>
          <field name="balance"/>
          <field name="margin_percentage"/>
          <field name="pax"/>
          <field name="margin_by_pax"/>
          <field name="date"/>
        </tree>
      </field>
    </record>

    <record id="coordination_performance_reports_view_form"
            model="ir.ui.view">
      <field name="name">
        xopgi_operations_performance.coordination_performance_report.form
      </field>
      <field name="model">xopgi_operations_performance.coordperf_report</field>
      <field name="arch" type="xml">
        <form string="Coordination Statistic">
          <sheet>
            <group>
              <field name="purchase_order_id"/>
              <field name="planification_time"/>
              <field name="reserve_send_time"/>
              <field name="supplier_response_time"/>
              <field name="purchase_time"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <record id="coordination_performance_reports_view_graph"
            model="ir.ui.view">
      <field name="name">
        xopgi_operations_performance.coordination_performance_report.graph
      </field>
      <field name="model">xopgi_operations_performance.coordperf_report</field>
      <field name="arch" type="xml">
        <graph string="Coordination Performance Statistics" type="pivot">
          <field name="purchase_order_id" type="row"/>
          <field name="planification_time" type="measure"/>
          <field name="reserve_send_time" type="measure"/>
          <field name="supplier_response_time" type="measure"/>
          <field name="purchase_time" type="measure"/>
        </graph>
      </field>
    </record>
    <record id="coordination_performance_reports_view_search" model="ir.ui.view">
      <field name="name">xopgi_operations_performance.coordination_performance_report.search</field>
      <field name="model">xopgi_operations_performance.coordperf_report</field>
      <field name="arch" type="xml">
        <search>
          <field name="user_id"/>
          <field name="account_analytic_id"/>
          <field name="manager_id"/>
          <field name="partner_id"/>
          <group string="Group By">
            <filter name="by_responsible" string="Responsible"
                    context="{'group_by': 'user_id'}"/>
            <filter name="by_dossier" string="Dossier"
                    context="{'group_by': 'account_analytic_id'}"/>
            <filter name="by_manager" string="Account Manager"
                    context="{'group_by': 'manager_id'}"/>
            <filter name="by_supplier" string="Supplier"
                    context="{'group_by': 'partner_id'}"/>
          </group>
        </search>
      </field>
    </record>
    <record id="coordination_performance_reports_view_tree" model="ir.ui.view">
      <field name="name">xopgi_operations_performance.coordination_performance_report.tree</field>
      <field name="model">xopgi_operations_performance.coordperf_report</field>
      <field name="arch" type="xml">
        <tree create="false" edit="false"
              default_order='id desc'
              string="Coordination Performance">
          <field name="purchase_order_id"/>
          <field name="planification_time"/>
          <field name="reserve_send_time"/>
          <field name="supplier_response_time"/>
          <field name="purchase_time"/>
        </tree>
      </field>
    </record>

    <record id="operations_performance_report_action"
            model="ir.actions.act_window">
      <field name="name">Operations Analysis</field>
      <field name="res_model">xopgi_operations_performance.opperf_report</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form,graph</field>
    </record>
    <record id="operations_result_report_action"
            model="ir.actions.act_window">
      <field name="name">Operations Results</field>
      <field name="res_model">xopgi_operations_performance.opresult_report</field>
      <field name="context" eval="{'search_default_closed_dossier': 1}"/>
      <field name="view_type">form</field>
      <field name="view_mode">tree,graph</field>
    </record>
    <record id="coordination_performance_report_action"
            model="ir.actions.act_window">
      <field name="name">Coordination Analysis</field>
      <field name="res_model">xopgi_operations_performance.coordperf_report</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form,graph</field>
      <field name="context" eval="{'search_default_by_supplier': 1}"/>
    </record>

    <menuitem id="operations_menu" name="Operations" parent="base.menu_reporting"/>
    <menuitem id="operations_performance_report_menu"
              action="operations_performance_report_action"
              parent="operations_menu" sequence="10"/>
    <menuitem id="operations_performance_result_report_menu"
              action="operations_result_report_action"
              parent="operations_menu" sequence="20"/>
    <menuitem id="operations_performance_coordination_report_menu"
              action="coordination_performance_report_action"
              parent="operations_menu" sequence="30"/>
  </data>
</openerp>
