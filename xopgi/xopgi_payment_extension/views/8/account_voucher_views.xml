<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <record model="ir.ui.view" id="account_voucher_receipt_view_form">
      <field name="name">account.voucher.receipt.view.form</field>
      <field name="model">account.voucher</field>
      <field name="inherit_id" ref="account_voucher.view_vendor_receipt_form"/>
      <field name="arch" type="xml">
        <field name="line_cr_ids" position="before">
          <button name="unmark_all_credits" type="object"
                  attrs="{'invisible': [('state', '!=', 'draft')]}"
                  string="Unmark All" class="oe_right oe_edit_only"/>
          <button name="mark_all_credits" type="object"
                  attrs="{'invisible': [('state', '!=', 'draft')]}"
                  string="Mark All" class="oe_right oe_edit_only"/>
        </field>
        <field name="line_dr_ids" position="before">
          <button name="unmark_all_debits" type="object"
                  attrs="{'invisible': [('state', '!=', 'draft')]}"
                  string="Unmark All" class="oe_right oe_edit_only"/>
          <button name="mark_all_debits" type="object"
                  attrs="{'invisible': [('state', '!=', 'draft')]}"
                  string="Mark All" class="oe_right oe_edit_only"/>
        </field>
        <tree string="Invoices and outstanding transactions">
          <field name="name" invisible="1"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="account_voucher_payment_view_form">
      <field name="name">account.voucher.payment.view.form</field>
      <field name="model">account.voucher</field>
      <field name="inherit_id" ref="account_voucher.view_vendor_payment_form"/>
      <field name="arch" type="xml">
        <field name="line_dr_ids" position="before">
          <button name="unmark_all_debits" type="object"
                  attrs="{'invisible': [('state', '!=', 'draft')]}"
                  string="Unmark All" class="oe_right oe_edit_only"/>
          <button name="mark_all_debits" type="object"
                  attrs="{'invisible': [('state', '!=', 'draft')]}"
                  string="Mark All" class="oe_right oe_edit_only"/>
        </field>
        <field name="line_cr_ids" position="before">
          <button name="unmark_all_credits" type="object"
                  attrs="{'invisible': [('state', '!=', 'draft')]}"
                  string="Unmark All" class="oe_right oe_edit_only"/>
          <button name="mark_all_credits" type="object"
                  attrs="{'invisible': [('state', '!=', 'draft')]}"
                  string="Mark All" class="oe_right oe_edit_only"/>
        </field>
        <tree string="Supplier Invoices and Outstanding transactions">
          <field name="name" invisible="1"/>
        </tree>
      </field>
    </record>
  </data>
</openerp>