<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <!-- A menu item for posting several entries at once with a popup for
	 confirmation. -->
    <act_window
	id="action_confirm_post"
	multi="True"
	key2="client_action_multi"
	name="Post moves"
	res_model="xopgi.account.move.confirm"
	src_model="account.move"
	view_mode="form"
	target="new"/>

    <record id="xopgi_account_move_confirm" model="ir.ui.view">
      <field name="name">xopgi.account.move.confirm.form</field>
      <field name="model">xopgi.account.move.confirm</field>
      <field name="arch" type="xml">
	<form string="Post moves" version="7.0">
	  <p class="oe_grey">
	    Once entries are post, you may not be able to modify them.  You
	    should only post the entries after verifying them in either a
	    report, the Chart of Accounts or any other means that allows to
	    verify unposted entries.
	  </p>
	  <footer>
	    <button string="Confirm post"
		    name="post"
		    type="object"
		    default_focus="1"
		    class="oe_highlight"
		    />
	    or
	    <button string="Cancel" class="oe_link" special="cancel"/>
	  </footer>
	</form>
      </field>
    </record>

  </data>
</openerp>
