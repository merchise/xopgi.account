<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <menuitem name="Travel Routes" id="menu_root" sequence="110"/>
    <menuitem name="Travel Routes" id="menu_general" parent="menu_root"/>

    <record model="ir.actions.act_window" id="action_res_route_points">
      <field name="name">Route Points</field>
      <field name="res_model">res.route.points</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Route Points" id="menu_res_route_points" parent="menu_general" sequence="1" action="action_res_route_points"/>

    <record model="ir.ui.view" id="res_route_points_view_tree">
      <field name="name">res.route.points.view.tree</field>
      <field name="model">res.route.points</field>
      <field name="arch" type="xml">
        <tree string="Route Point List">
          <field name="state_id" string="State"/>
          <field name="name"/>
          <field name="is_state_reference"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="res_route_points_view_form">
      <field name="name">res.route.points.view.form</field>
      <field name="model">res.route.points</field>
      <field name="arch" type="xml">
        <form string="Route Point">
          <group>
            <field name="state_id" string="State"/>
          </group>
          <group>
            <field name="name"/>
          </group>
          <group>
            <field name="is_state_reference"/>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="action_res_routes">
      <field name="name">Routes</field>
      <field name="res_model">res.routes</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Routes" id="menu_res_routes" parent="menu_general" sequence="2" action="action_res_routes"/>

    <record model="ir.ui.view" id="res_routes_view_tree">
      <field name="name">res.routes.view.tree</field>
      <field name="model">res.routes</field>
      <field name="arch" type="xml">
        <tree>
          <field name="origin_point_id" string="Origin Point"/>
          <field name="destination_point_id" string="Destination Point"/>
          <field name="distance"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="res_routes_view_form">
      <field name="name">res.routes.view.form</field>
      <field name="model">res.routes</field>
      <field name="arch" type="xml">
        <form string="Route">
          <group>
            <field name="origin_point_id" string="Origin Point"/>
          </group>
          <group>
            <field name="destination_point_id" string="Destination Point"/>
          </group>
          <group>
            <field name="distance"/>
          </group>
        </form>
      </field>
    </record>

  </data>
</openerp>
