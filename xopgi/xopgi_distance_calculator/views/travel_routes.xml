<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <menuitem name="Travel Routes" id="menu_root" sequence="110"/>
    <menuitem name="Travel Routes" id="menu_general" parent="menu_root"/>

    <record model="ir.actions.act_window" id="action_route_points">
      <field name="name">Route Points</field>
      <field name="res_model">res.route.points</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Route Points" id="menu_route_points" parent="menu_general" sequence="1" action="action_route_points"/>

    <record model="ir.ui.view" id="course_form">
      <field name="name">Route Points List</field>
      <field name="model">res.route.points</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name" placeholder="Denomination here"/>
        </tree>
      </field>
    </record>

    <record model="ir.actions.act_window" id="action_routes">
      <field name="name">Routes</field>
      <field name="res_model">res.routes</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.ui.view" id="routes_form">
      <field name="name">Route</field>
      <field name="model">res.routes</field>
      <field name="arch" type="xml">
        <tree>
            <field name="origin_point_id" placeholder="Denomination here"/>
            <field name="destination_point_id" placeholder="Denomination here"/>
            <field name="distance" placeholder="Denomination here"/>
        </tree>
      </field>
    </record>

    <menuitem name="Routes" id="menu_routes" parent="menu_general" sequence="2" action="action_routes"/>

  </data>
</openerp>
