<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record model="ir.ui.view" id="view_liquid_graph">
      <field name="name">account.liquid.graph</field>
      <field name="model">account.move.line</field>
      <field name="arch" type="xml">
	<graph string="Invoices" type="pivot" stacked="True">
	  <field name="account_id"/>
	  <field name="currency_id" type="col"/>
	  <field name="line_currency_amount" operator="+"/>
	</graph>
      </field>
    </record>

    <record model="ir.actions.act_window" id="action_liquidity_graph">
      <field name="name">Liquidity</field>
      <field name="res_model">account.move.line</field>
      <field name="view_type">form</field>
      <field name="view_mode">graph</field>
      <field name="view_id" ref="view_liquid_graph"/>
      <field name="domain">
	[('account_id.type', '=', 'liquidity')]
      </field>
    </record>
  </data>
</openerp>
